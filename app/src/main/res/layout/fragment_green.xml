<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4dd745">

    <TextView
        android:id="@+id/tv_fragmentGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GREEN Fragment"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_fragmentGreen2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here will be Some Text"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/tv_fragmentGreen" />

    <Button
        android:text="button_fragment_green"
        android:id="@+id/button_fragment_green"
        app:layout_constraintTop_toBottomOf="@id/tv_fragmentGreen2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</androidx.constraintlayout.widget.ConstraintLayout>