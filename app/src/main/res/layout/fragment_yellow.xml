<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffb700"
    tools:context=".FragmentYellow">

    <TextView
        android:id="@+id/tv_fragmentYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yellow Fragment"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_fragmentYellow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here will be Some Text"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/tv_fragmentYellow" />

    <Button
        android:id="@+id/button_fragment_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-->"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>