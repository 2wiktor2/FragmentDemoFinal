<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff484b">

    <TextView
        android:id="@+id/tv_fragmentRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RED Fragment"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_fragmentRed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here will be Some Text"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/tv_fragmentRed" />

    <EditText
        android:hint="text text text "
        app:layout_constraintTop_toBottomOf="@id/tv_fragmentRed2"
        android:id="@+id/edit_text_red_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>